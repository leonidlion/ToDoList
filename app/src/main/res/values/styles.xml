<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ItemLayout">
        <item name="android:layout_marginStart">@dimen/space4</item>
        <item name="android:layout_marginEnd">@dimen/space4</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="ItemText">
        <item name="android:drawablePadding">@dimen/space8</item>
        <item name="android:layout_marginTop">@dimen/space16</item>
        <item name="android:layout_marginBottom">@dimen/space16</item>
        <item name="android:layout_marginStart">@dimen/space8</item>
        <item name="android:layout_marginEnd">@dimen/space8</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemLayoutRed" parent="ItemLayout">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="ItemText.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ItemText.White.Large">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Large</item>
    </style>

    <!--TASK ITEM STYLES-->
    <style name="TaskItemColor">
        <item name="android:background">@android:color/white</item>
        <item name="android:textAppearance">@style/TaskItemText.Expired</item>
    </style>

    <style name="TaskItemColor.Expired">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TaskItemText</item>
    </style>

    <style name="TaskItemText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TaskItemText.Expired">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

</resources>
