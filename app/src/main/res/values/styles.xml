<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ItemLayout">
        <item name="android:layout_marginStart">@dimen/space4</item>
        <item name="android:layout_marginEnd">@dimen/space4</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="ItemText">
        <item name="android:drawablePadding">@dimen/space8</item>
        <item name="android:layout_marginTop">@dimen/space16</item>
        <item name="android:layout_marginBottom">@dimen/space16</item>
        <item name="android:layout_marginStart">@dimen/space8</item>
        <item name="android:layout_marginEnd">@dimen/space8</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemLayoutRed" parent="ItemLayout">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="ItemText.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ItemText.White.Large">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Large</item>
    </style>

    <!--TASK ITEM STYLES-->
    <style name="TaskItemColor">
        <item name="textColorSmall">#9e9e9e</item>
        <item name="textColorLarge">#757575</item>
        <item name="itemBackgroundColor">#960cff00</item>
    </style>

    <style name="TaskItemColor.Expired">
        <item name="textColorSmall">#212121</item>
        <item name="textColorLarge">#212121</item>
        <item name="itemBackgroundColor">#96ff3d00</item>
    </style>

    <style name="ItemTaskTextViewSmall">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Small</item>
        <item name="android:textColor">?attr/textColorSmall</item>
    </style>

    <style name="ItemTaskTextViewLarge">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Large</item>
        <item name="android:textColor">?attr/textColorLarge</item>
    </style>

    <style name="ItemTaskLayout">
        <item name="android:background">?attr/itemBackgroundColor</item>
    </style>

</resources>
